<odoo>
    <record model="ir.ui.view" id="session_tree_view">
        <field name="name">openacademy.session.tree</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <tree string="Sessions" decoration-info="duration&lt;5" decoration-danger="duration&gt;15" editable="bottom">
                <field name="name"/>
                <field name="start_date"/>
                <field name="duration"/>
                <field name="seats"/>
                <field name="course"/>
                <field name="instructor"/>
                <button name="%(sessions_form_action)d" type="action" help="edit" icon="fa-pencil"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="session_form_view">
        <field name="name">openacademy.session.form</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <form string="Session form">
                <group colspan="2" col="4" string="Group title">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="duration"/>
                    <field name="seats"/>
                    <field name="taken_seats" widget="progressbar"/>
                </group>
                <group colspan="2" col="4" string="Group title">
                    <field name="course"/>
                    <field name="instructor"/>
                </group>
                <group colspan="4">
                    <notebook colspan="4">
                        <page string="Attendees">
                            <field name="attendees" nolabel="1"/>
                        </page>
                    </notebook>
                </group>
            </form>
        </field>
    </record>

     <record model="ir.ui.view" id="session_search_view">
        <field name="name">openacademy.session.search</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="start_date"/>
                <field name="duration"/>
                <field name="seats"/>
                <field name="course"/>
                <field name="instructor"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="session_kanban_view">
        <field name="name">openacademy.session.kanban</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <kanban default_group_by="course">
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}">
                            <div class="oe_dropdown_kanban">
                                <div class="oe_dropdown_toggle">
                                    <i class="fa fa-bars fa-lg"/>
                                    <div class="oe_dropdown_menu">
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                            <div t-attf-class="oe_kanban_content">
                                <b>Name: </b>
                                <field name="name"/>
                                <br/>
                                <b>Start date: </b>
                                <field name="start_date"/>
                                <br/>
                                <b>Duration: </b>
                                <field name="duration"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="session_calendar_view">
        <field name="name">openacademy.session.calendar</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <calendar string="Session Calendar" date_start="start_date" date_stop="end_date" color="instructor">
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="session_gantt_view">
        <field name="name">openacademy.session.gantt</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <gantt string="Sessions Gantt" date_start="start_date" date_stop="end_date" default_group_by='instructor'>
            </gantt>
        </field>
    </record>

    <record model="ir.ui.view" id="session_graph_view">
        <field name="name">openacademy.session.graph</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <graph string="Attendees by Courses">
                <field name="course"/>
                <field name="attendees_count" type="measure"/>
            </graph>
        </field>
    </record>
</odoo>