<odoo>
    <data>
        <record model="ir.ui.view" id="session_tree_view">
                <field name="name">Sessions</field>
                <field name="model">openacademy.session</field>
                <field name="priority" eval="16"/>
                <field name="arch" type="xml">
                    <tree string="Session" editable="bottom" decoration-danger="duration&lt;5.0" decoration-info="duration&gt;10.0">
                        <button type="object" name="open_record" string="Open form view"/>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="duration"/>
                        <field name="number_of_seats"/>
                        <field name="related_course"/>
                        <field name="instructor"/>
                        <field name="responsible"/>
                        <field name="remain_seats" widget="progressbar"/>
                        <field name="num_attendees"/>
                    </tree>
                </field>
            </record>

            <record model="ir.ui.view" id="session_form_view">
                <field name="name">Sessions</field>
                <field name="model">openacademy.session</field>
                <field name="priority" eval="16"/>
                <field name="arch" type="xml">
                    <form>
                        <header>
                            <button name="move_confirmed" type="object" string="Move to confirmed" class="oe_highlight"/>
                            <button name="move_done" type="object" string="Move to done" class="oe_highlight"/>

                            <button name="move_draft" type="object" string="Move to draft" class="oe_highlight"/>

                            <field name="state" widget="statusbar"/>
                        </header>
                        <group colspan="4">
                            <group col="2">
                                <field name="name"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration"/>
                                <field name="responsible"/>
                            </group>
                            <group col="2">
                                <field name="number_of_seats"/>
                                <field name="related_course"/>
                                <field name="remain_seats" widget="progressbar"/>
                                <field name="instructor"/>
                            </group>

                            <notebook colspan="4">
                                <page string="Attendees">
                                    <field name="attendees"/>
                                </page>
                            </notebook>
                        </group>
                    </form>
                </field>
            </record>

            <record model="ir.ui.view" id="session_search_view">
                <field name="name">Sessions</field>
                <field name="model">openacademy.session</field>
                <field name="priority" eval="16"/>
                <field name="arch" type="xml">
                    <search>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="duration"/>
                        <field name="number_of_seats"/>
                        <field name="related_course"/>
                        <field name="instructor"/>
                        <field name="responsible"/>
                    </search>
                </field>
            </record>

            <record model="ir.ui.view" id="session_kanban_view">
            <field name="name">Sessions in Courses</field>
            <field name="model">openacademy.session</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <kanban default_group_by="related_course">
                    <field name="color"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                oe_kanban_global_click_edit oe_semantic_html_override
                                                oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">

                                <div class="oe_dropdown_kanban">
                                    <div class="oe_dropdown_toggle">
                                        <i class="fa fa-bars fa-lg"/>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker" data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"/>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    <field name="name"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="session_calendar_view">
            <field name="name">Sessions calendar</field>
            <field name="model">openacademy.session</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <calendar color="color" date_start="start_date" date_stop="end_date">
                    <field name="name"/>
                    <field name="number_of_seats"/>
                    <field name="related_course"/>
                    <field name="instructor"/>
                    <field name="responsible"/>
                </calendar>
            </field>
        </record>

        <record model="ir.ui.view" id="session_gantt_view">
            <field name="name">Sessions</field>
            <field name="model">openacademy.session</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <gantt string="Courses Gantt diagram"
                        date_start="start_date"
                        date_delay="duration"
                        default_group_by="instructor">
                </gantt>
            </field>
        </record>

        <record model="ir.ui.view" id="session_graph_view">
            <field name="name">Sessions</field>
            <field name="model">openacademy.session</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <graph string="Sessions Graph" type="bar">
                        <field name="related_course"/>
                        <field name="num_attendees" type="measure"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_menu_sessions">
            <field name="name">Sessions</field>
            <field name="res_model">openacademy.session</field>
            <field name="view_mode">tree,form,kanban,calendar,gantt,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">If you need some help, please ask google</p>
            </field>
        </record>
    </data>
</odoo>