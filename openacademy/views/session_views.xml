<odoo>
    <data>
        <record model="ir.ui.view" id="session_tree_view">
            <field name="name">Sessions</field>
            <field name="model">session</field>
            <field name="arch" type="xml">
                <tree string="Subjects">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="duration"/>
                    <field name="number_of_seats"/>
                    <field name="taken_seats" widget="progressbar"/>
                    <field name="related_course"/>
                    <field name="instructor"/>
                    <field name="course_description"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="session_form_view">
            <field name="name">Session</field>
            <field name="model">session</field>
            <field name="arch" type="xml">
                <form string="Session">
                    <group>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="duration"/>
                        <field name="number_of_seats"/>
                        <field name="taken_seats" />
                        <field name="related_course"/>
                        <field name="instructor"/>
                        <field name="course_description"/>
                    </group>
                    <notebook>
                        <page string="Atendees">
                            <field name="attendees"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="session_search_view">
            <field name="name">Search Session</field>
            <field name="model">session</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="number_of_seats"/>
                    <field name="related_course"/>
                    <field name="instructor"/>
                </search>
            </field>
        </record>
    </data>
</odoo>
