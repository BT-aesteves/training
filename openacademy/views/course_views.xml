<odoo>
    <data>
         <record model="ir.ui.view" id="course_tree_view">
            <field name="name">Courses</field>
            <field name="model">openacademy.course</field>
            <field name="priority" eval="16"></field>
            <field name="arch" type="xml">
                <tree string="Course">
                    <field name="name"></field>
                    <field name="description"></field>
                    <field name="sessions"></field>
                    <field name="full_sessions"></field>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="course_form_view">
            <field name="name">Courses</field>
            <field name="model">openacademy.course</field>
            <field name="priority" eval="16"></field>
            <field name="arch" type="xml">
                <form>
                    <group colspan="4">
                        <group col="4">
                            <field name="name"></field>
                        </group>
                        <notebook colspan="4">
                            <page string="Description">
                                <field name="description" nolabel="1"></field>
                            </page>
                            <page string="Sessions">
                                <field name="sessions" />
                                <field name="full_sessions"/>
                            </page>
                        </notebook>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="course_search_view">
            <field name="name">Courses</field>
            <field name="model">openacademy.course</field>
            <field name="priority" eval="16"></field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"></field>
                    <field name="description"></field>
                    <field name="sessions"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="openmenu1">
            <field name="name">Courses</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">If you need some help, please ask google</p>
            </field>
        </record>
    </data>
</odoo>