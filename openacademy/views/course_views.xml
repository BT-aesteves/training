<odoo>
    <data>
        <record model="ir.ui.view" id="tree_view">
            <field name="name">Tree View</field>
            <field name="model">course</field>
            <field name="arch" type="xml">
                <tree string="Subjects">
                    <field name="title"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="form_view">
            <field name="name">Form View</field>
            <field name="model">course</field>
            <field name="arch" type="xml">
                <form string="Courses">
                    <group>
                        <field name="title"/>
                        <field name="description"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="search_view">
            <field name="name">Search View</field>
            <field name="model">course</field>
            <field name="arch" type="xml">
                <search>
                    <field name="title"/>
                    <field name="description"/>
                </search>
            </field>
        </record>
    </data>
</odoo>
