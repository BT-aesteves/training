                <!--</field>-->
            <!--</field>-->
        <!--</record>-->

        <record model="ir.actions.act_window" id="openmenu1">
            <field name="name">Courses</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">If you need some help, please ask google</p>
            </field>
            <field name="search_view_id" ref="course_search_view"/>
            <field name="context">
                {'search_default_self_responsible':1,
                'search_default_group_by_responsible': 1}
            </field>
        </record>
    </data>
</odoo>