<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- VIEWS FOR THE WIZARD -->
        <record model="ir.ui.view" id="wizard_form_view">
            <field name="name">Session Wizard</field>
            <field name="model">openacademy.wizard</field>
            <field name="arch" type="xml">
                <form>
                <group>
                    <field name="session_ids" />
                    <field name="attendee_ids" />
                </group>
                <footer>
                    <button string="Save" type="object" name="subscribe" />
                    <button string="Cancel" special="cancel" />
                </footer>
                </form>
            </field>
        </record>

        <!-- VIEWS FOR THE USER CLASS -->
        <record model="ir.ui.view" id="res_users_ext_view">
            <field name="name">res_users_ext_view</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="is_instructor" />
                </field>
            </field>
        </record>


        <!-- VIEWS FOR THE SESSION CLASS -->

        <record model="ir.ui.view" id="session_calendar_view">
            <field name="name">session_calendar_view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <calendar string="Session Calendar" date_start="start_date" date_delay="duration"
                          color="instructor_id" >
                    <field name="name" />
                </calendar>
            </field>
        </record>

        <!-- Session Kanban View -->
        <record id="session_kanban_view" model="ir.ui.view">
            <field name="name">Session Kanban View</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <kanban default_group_by="course_id">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                                <div
                                    t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div class="oe_dropdown_kanban">
                                    <!-- dropdown menu -->
                                    <div class="oe_dropdown_toggle">
                                        <span class="oe_e">#</span>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                                                        <!-- title -->
                                    <b>Session name:
                                    <field name="name"/></b>
                                    <br/>
                                    Start date:
                                    <field name="start_date"/>
                                    <br/>
                                    Duration:
                                    <field name="duration"/>
                                </div>
                            </div>
    
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record model="ir.ui.view" id="session_tree">
            <field name="name">session_tree_view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">

                <tree string="Session" colors="red:duration&gt;15;#0000FF:duration&lt;5;">
                    <field name="name" />
                    <field name="instructor_id" />
                    <field name="start_date" />
                    <field name="duration" invisible="True" />
                    <field name="seats" />
                    <field name="taken_seats" widget="progressbar" />
                </tree>

            </field>
        </record>

        <record model="ir.ui.view" id="session_form">
            <field name="name">session_form_view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">

                <form string="Session">
                    <header>
                            <field name="state" readonly="True" widget="statusbar" />
                            <button name="draft" type="workflow"
                                    string="Draft"
                                    states="confirmed,done" />
                            <button name="confirm" type="workflow"
                                    string="Confirm" 
                                    states="draft" 
                                    class="oe_highlight" />
                            <button name="done" type="workflow"
                                    string="Done"
                                    states="draft,confirmed" />
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" placeholder="Session Name" />
                        </h1>
                        <field name="course_id" domain="[(1,'=',1)]" />
                        <group>
                            <field name="start_date" />
                            <field name="duration" />
                            <field name="seats" />
                            <field name="instructor_id" />
                            <field name="taken_seats" widget="progressbar" />
                        </group>
                        <separator string="Attendees" />
                        <field name="attendee_ids" />
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Course Search View -->
        <record model="ir.ui.view" id="course_search_view">
            <field name="name">course_search_view</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="description" />
                </search>
            </field>
        </record>

        <!-- Course Tree View -->
        <record model="ir.ui.view" id="course_tree_view">
            <field name="name">course_tree_view</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <!-- Course Form View -->
        <record model="ir.ui.view" id="course_form_view">
            <field name="name">course_form_view</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <separator string="Course Information" />
                        <group>
                            <field name="name" />
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" />
                            </page>
                            <page string="Sessions">
                                <field name="session_ids" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Wizard Action -->
        <act_window id="launch_session_wizard"
            name="Add Attendees"
            src_model="openacademy.session"
            res_model="openacademy.wizard"
            view_mode="form"
            target="new"
            key2="client_action_multi" />

        <!-- Session Action -->
        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Sessions</field>
            <field name="res_model">openacademy.session</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first session</p>
            </field>
        </record>

        <!-- Course Action -->
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Courses</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Items -->
        <menuitem id="main_openacademy_menu" name="Open Academy" />
        <menuitem id="openacademy_menu" name="Open Academy" parent="main_openacademy_menu" />
        <menuitem id="courses_menu" name="Courses" parent="openacademy_menu"
            action="course_list_action" />
        <menuitem id="session_menu" name="Sessions" parent="openacademy_menu"
            action="session_list_action" />


    </data>
</openerp>
