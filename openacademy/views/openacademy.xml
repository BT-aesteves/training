<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- OPENACADEMY VIEWS -->
        <!-- RES.PARTNER FORM VIEW EXTENDED -->
        <record model="ir.ui.view" id="extended_partner_form_view">
            <field name="name">extended_partner_form_view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <field name="function" position="after">
                    <field name="instructor" />
                </field>
            </field>
        </record>


        <!-- Session Tree View -->
    
            <record model="ir.ui.view" id="session_tree">
            <field name="name">session_tree_view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <tree string="Session" colors="red:duration&gt;5;#0000FF:duration&lt;5">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="duration" invisible="True" />
                    <field name="taken_seats" widget="progressbar" />
                </tree>    
            </field>
        </record>

        <!-- Session Form View -->
        <record model="ir.ui.view" id="session_form">
            <field name="name">session_form_view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <form string="Session">
                    <header>
                        <button string="Confirm"
                                type="object"
                                name="action_confirm"
                                states="draft"
                                class="oe_highlight" />
                        <button string="Reset to Draft"
                                type="object"
                                name="action_draft"
                                states="confirmed,done" />
                        <button string="Done"
                                type="object"
                                name="action_done"
                                states="confirmed"
                                class="oe_highlight" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <field name="name"/>
                    <group colspan="2">
                        <field name="course_id" />    
                        <field name="instructor_id" />
                    </group>
                    <group colspan="2">                    
                        <field name="start_date" 
                               attrs="{'readonly': [('state', '=', 'done')]}"/>
                        <field name="duration" />
                        <field name="seats"
                               attrs="{'invisible': [('state', '=', 'done')]}" />
                        <field name="taken_seats" widget="progressbar" />
                    </group>
                    <notebook>
                        <page string="Attendees">
                            <field name="attendee_ids" mode="list" />
                        </page>
                    </notebook>                
                </form>    
            </field>
        </record>

        <!-- Session Calendar View -->
        <record model="ir.ui.view" id="session_calendar_view">
            <field name="name">session_calendar_view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <calendar string="Calendar for Sessions"
                          date_start="start_date"
                          date_delay="duration"
                          color="instructor_id">
                      <field name="name" />
                </calendar>
            </field>
        </record>

        <!-- Session Gantt View -->
        <record model="ir.ui.view" id="session_gantt_view">
            <field name="name">session_gantt_view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <gantt string="Gantt View for Sessions"
                          date_start="start_date"
                          date_delay="duration"
                          color="inventor_id">
                         <field name="name" />
                </gantt>
            </field>
        </record>

        <!-- Session Kanban View -->
        <record model="ir.ui.view" id="session_kanban_view">
            <field name="name">session_kanban_view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <kanban string="Kanban View for Sessions">
                    <field name="color" />
                    <templates>
                        <t t-name="kanban-box">
                            <div
                                    t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div class="oe_dropdown_kanban">
                                    <!-- dropdown menu -->
                                    <div class="oe_dropdown_toggle">
                                        <i class="fa fa-bars fa-lg"/>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    <!-- CONTENT -->
                                    Session:
                                    <field name="name" /><br />
                                    Start Date:
                                    <field name="start_date" /><br />
                                    Duration:
                                    <field name="duration" />
                                </div>
                            </div>
                        </t>
                    </templates>

                </kanban>
            </field>
        </record>

        <!-- Session Graph View -->
        <record model="ir.ui.view" id="session_graph_view">
            <field name="name">session_graph_view</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <graph string="Duration by Courses">
                    <field name="course_id"/>
                    <field name="duration" type="measure"/>
                </graph>
            </field>
        </record>

    <!-- Session Diagram View -->
    <!-- Needs to be fixed -->
	<record id="view_session_diagram" model="ir.ui.view">
		<field name="name">openacademy.session</field>
		<field name="model">openacademy.session</field>
		<field name="arch" type="xml">
			<diagram string="Session Diagram">
				<node object="openacademy.session">
					<field name="name" />
				</node>
				<arrow object="openacademy.session" source="course_id"
					destination="session_ids">
					<field name="course_id" />
				</arrow>
			</diagram>
		</field>
	</record>

        <!-- Course Form View -->
        <record model="ir.ui.view" id="course_form_view">
            <field name="name">course_form_view</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <form string="Courses">
                    <sheet>
                        <h2><field name="name" placeholder="Course Name" /></h2>
                        <group colspan="2">
                            <field name="responsible_id" />
                        </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" />
                        </page>
                        <page string="Sessions">
                            <field name="session_ids" />
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Course Tree View -->
        <record model="ir.ui.view" id="course_tree_view">
            <field name="name">course_tree_view</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <tree string="Courses">
                        <field name="name" />
                        <field name="description" />
                </tree>
            </field>
        </record>

        <!-- Course Search View -->
        <record model="ir.ui.view" id="course_search_view">
            <field name="name">course_search_view</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="description" />
                </search>
            </field>
        </record>


        <!-- COURSE WINDOW ACTION -->
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Courses</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Sessions</field>
            <field name="res_model">openacademy.session</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,kanban,graph,diagram</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first session!</p>
            </field>
        </record>

        <!-- MENU ITEMS -->
        <menuitem id="main_openacademy_menu" name="Open Academy" />
        
        <menuitem id="openacademy_menu" name="Open Academy"
                  parent="main_openacademy_menu" />
    
        <menuitem id="courses_menu" name="Courses"
                  parent="openacademy_menu" action="course_list_action" />

        <menuitem id="session_menu" name="Sessions" parent="openacademy_menu"
            action="session_list_action" />
    </data>
</openerp>
