<odoo>
    <menuitem
            id="menu_openacademy"
            name="Open Academy"
            sequence="0"
    />

    <record model="ir.actions.act_window" id="act_courses">
        <field name="name">Courses</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to create a course</p>
        </field>
    </record>

    <menuitem
            id="menu_courses"
            parent="menu_openacademy"
            name="Courses"
            sequence="0"
            action="act_courses"
    />

    <record model="ir.actions.act_window" id="act_sessions">
        <field name="name">Sessions</field>
        <field name="res_model">openacademy.session</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to create a session</p>
        </field>
    </record>

    <menuitem
            id="menu_sessions"
            parent="menu_openacademy"
            name="Sessions"
            sequence="1"
            action="act_sessions"
    />
</odoo>