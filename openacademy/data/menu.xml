<odoo>
    <menuitem
            id="main_menu"
            name="Open Academy"
            sequence="0"
    />

    <record model="ir.actions.act_window" id="courses_action">
        <field name="name">Courses</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to create a course</p>
        </field>
        <field name="context">
            {'search_default_i_am_the_responsible': 1}
        </field>
    </record>

    <menuitem
            id="courses_menu"
            parent="openacademy.main_menu"
            name="Courses"
            sequence="0"
            action="openacademy.courses_action"
    />

    <record model="ir.actions.act_window" id="sessions_action">
        <field name="name">Sessions</field>
        <field name="res_model">openacademy.session</field>
        <field name="view_mode">kanban,tree,calendar,gantt,graph,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to create a session</p>
        </field>
    </record>

    <menuitem
            id="sessions_menu"
            parent="openacademy.main_menu"
            name="Sessions"
            sequence="1"
            action="openacademy.sessions_action"
    />
</odoo>