<?xml version="1.0"?>
<odoo>
    <data>
        <!--GROUPS-->
        <record model="res.groups" id="group_manager">
            <field name="name">Open Academy Manager</field>
        </record>


        <!--RECORD RULES-->
        <record model="ir.rule" id="manager_course_rule">
            <field name="name">Only responsible can modify/delete</field>
            <field name="model_id" ref="openacademy.model_course"/>
            <field name="groups" eval="[(4, ref('group_manager'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">['|', ('responsible_id','=', False),('responsible_id','=',user.id)]</field>
        </record>
    </data>
</odoo>

