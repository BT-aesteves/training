<odoo>
    <data>
        <record model="res.groups" id="manager_group">
            <field name="name">Manager</field>
        </record>
    </data>
    <data>
        <record id="responsible_rule" model="ir.rule">
            <field name="name">Responsible rule</field>
            <field name="model_id" ref="model_openacademy_course"/>
            <field name="groups" eval="[(4,ref('manager_group'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[('responsible_id','=', user.id)]</field>
        </record>
        <record id="course_constraint_rule" model="ir.rule">
            <field name="name">Without responsible rule</field>
            <field name="model_id" ref="model_openacademy_course"/>
            <field name="groups" eval="[(4,ref('manager_group'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[('responsible_id','=', False)]</field>
        </record>
    </data>
</odoo>