<odoo>
    <data>
        <record id="new_group_manager" model="res.groups">
            <field name="name">Manager</field>
        </record>

        <record id="course_responsible_rule" model="ir.rule">
            <field name="name">Course Responsible Rule</field>
            <field name="model_id" ref="model_course"/>
            <field name="groups" eval="[(4, ref('openacademy.new_group_manager'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">['|',('responsible', '=', user.id),('responsible','=',False)]</field>
        </record>
    </data>
</odoo>