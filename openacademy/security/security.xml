<?xml version="1.0"?>
<odoo>
    <data>


        <record model="res.groups" id="group_openacademy_manager">
            <field name="name">OpenAcademy Managers</field>
        </record>

    <record id="manager_responsible_edit_del" model="ir.rule">
        <field name="name">manager responsible edit/delete course</field>
        <field name="model_id" ref="model_openacademy_course"/>
        <field name="domain_force">['|',('responsible_id', '=', user.id),('responsible_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('group_openacademy_manager'))]"/>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    </data>
</odoo>

