<odoo>
    <data noupdate="0">
        <record id="openacademy_manager_group" model="res.groups">
            <field name="name">Manager Group</field>
        </record>

        <record id="rule_course" model="ir.rule">
            <field name="name">RULE_COURSE</field>
            <field name="model_id" ref="openacademy.model_course"/>
            <field name="groups" eval="[(4, ref('openacademy_manager_group'))]" />
            <field name="perm_read" eval="0" />
            <field name="perm_write" eval="1" />
            <field name="perm_create" eval="0" />
            <field name="perm_unlink" eval="1" />
            <field name="domain_force">['|',('responsible','=',user.id),('responsible','=',False)]</field>
        </record>

    </data>
</odoo>