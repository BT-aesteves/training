<odoo>
    <data>
        <record id="openacademy_manager_category" model="ir.module.category">
            <field name="name">OpenAcademy Management</field>
            <field name="description">OpenAcademy Management</field>
        </record>
        <record id="openacademy_user_group" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="openacademy_manager_category"/>
        </record>
        <record id="openacademy_manager_group" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="openacademy_manager_category"/>
        </record>
        <record id="openacademy_user_rule" model="ir.rule">
            <field name="name">Users edit courses</field>
            <field name="model_id" ref="model_course"/>
            <field name="domain_force">[('responsible','=',False)]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('openacademy.openacademy_user_group'))]" />
        </record>
        <record id="openacademy_manager_rule" model="ir.rule">
            <field name="name">Manager access</field>
            <field name="model_id" ref="model_course"/>
            <field name="domain_force">[('responsible','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('openacademy.openacademy_manager_group'))]" />
        </record>
    </data>
</odoo>