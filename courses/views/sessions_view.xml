<odoo>
    <record model="ir.actions.act_window" id="session_view">
        <field name="name">session.view</field>
        <field name="res_model">session</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
    </record>

    <record id="session_tree_view" model="ir.ui.view">
        <field name="name">session.tree.view</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
            <tree string="Sessions" decoration-info="duration&lt;5" decoration-danger="duration&gt;15" editable="bottom">
                  <field name="name"/>
                  <field name="course_description"/>
                  <field name="instructor"/>
                  <field name="number_of_seats"/>
                  <field name="taken_seats_percentage" widget="progressbar"/>
                  <field name="duration"/>
                  <field name="start_date"/>
                  <field name="end_date"/>
                  <button name="show_form" string="Edit" type="object"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="session_form_view">
        <field name="name">session.form.view</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
          <form string="Edit Session">
              <group colspan="1">
                  <field name="name"/>
                  <field name="instructor"/>
                  <field name="number_of_seats"/>
                  <field name="taken_seats_percentage" widget="progressbar"/>
                  <field name="duration"/>
                  <field name="start_date"/>
                  <field name="end_date"/>
              </group>
              <notebook colspan="4">
                  <page string="Attendees">
                    <field name="attendees" nolabel="1"></field>
                </page>
              </notebook>
          </form>
        </field>
    </record>

    <record model="ir.ui.view" id="session_calendar_view">
        <field name="name">session.calendar.view</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
              <calendar string="Session calendar" color="color" date_start="start_date" date_stop="end_date">
                  <field name="name"/>
              </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="session_kanban_view">
        <field name="name">session.kanban.view</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
            <kanban default_group_by='session_id'>
                <field name="color"/>
                <field name='name'/>
                <templates>
                    <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                            oe_kanban_global_click_edit oe_semantic_html_override
                            oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                            <div class="oe_dropdown_kanban">
                                     <div class="oe_dropdown_toggle">
                                            <i class="fa fa-bars fa-lg"/>
                                                <ul class="oe_dropdown_menu">
                                                    <li>
                                                    <a type="delete">Delete</a>
                                                  </li>
                                               <li>
                                                   <ul class="oe_kanban_colorpicker" data-field="color"/>
                                                     </li>
                                            </ul>
                                     </div>
                                     <div class="oe_clear"></div>
                              </div>
                              <div t-attf-class="oe_kanban_content">
                                  <field name="color"/>
                                 <field name="name"/>
                              </div>
                         </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <menuitem id="session_menu"  name="Sessions" parent="openacademy_menu" action="session_view" sequence="2" ></menuitem>
</odoo>