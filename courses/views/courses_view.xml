<odoo>
    <record model="ir.actions.act_window" id="courses_id">
        <field name="name">Courses</field>
        <field name="res_model">courses</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.ui.view" id="test_module_form">
        <field name="name">Edit Course</field>
        <field name="model">courses</field>
        <field name="arch" type="xml">
          <form string="Edit Course">
              <group colspan="1">
                  <field name="name"/>
                  <field name="description"/>
                  <field name="responsible"/>
              </group>
              <notebook colspan="4">
                <page string="Sessions">
                    <field name="course_id" nolabel="1"></field>
                </page>
              </notebook>
          </form>
        </field>
    </record>
    <record id="course_tree_view" model="ir.ui.view">
        <field name="name">Courses</field>
        <field name="model">courses</field>
        <field name="arch" type="xml">
            <tree string="Courses">
                  <field name="name"/>
                  <field name="description"/>
                  <field name="responsible"/>
            </tree>
        </field>
    </record>
    <menuitem id="menu_id" name="Open Academy" sequence="30"></menuitem>
    <menuitem id="submenu_id"  name="Courses" parent="menu_id" action="courses_id" sequence="1" ></menuitem>
</odoo>